<div class="container">
  <div class="login-header">
    <div class="row">
      <div class="col-md-8 col-sm-offset-2 text-center">
        <%= image_tag "app-logo.png", alt: 'App Logo', class: 'app-logo' %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t('change_your_password', scope: [:devise, :passwords, :edit]) %></h3>
        </div>
        <%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
          <div class="panel-body">
            <div class="form-group">
              <%#= devise_error_messages! %>
              <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: t('new_password', scope: [:devise, :passwords, :edit]) %>
            </div>
            <div class="form-group">
              <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control', placeholder: t('confirm_new_password', scope: [:devise, :passwords, :edit]) %>
              <%= f.hidden_field :reset_password_token %>
            </div>
          </div>
          <div class="panel-footer panel-footer-toolbox">
            <div class="panel-toolbar">
              <div class="actions">
                <%= link_to t('cancel', scope: [:devise, :shared, :links]), unauthenticated_root_path, class: "btn btn-default" %>
                <%= f.submit t('change_my_password', scope: [:devise, :passwords, :edit]), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="login-help text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
